extends layouts/layout

block content
  div.row.m-auto(style="height:80vh;")
    div.col-xs-12.col-md-4.col-lg-3.m-auto.d-flex.justify-content-center.text-center.p-4
      div.row.border.p-4
        h1= title
        p.mt-4 Have an account? 
          a(href="/login") Login
          
        p#SuccessMessages
        p#ErrorMessages

        form(action="/users", method="POST") 
          input.form-control(type="text", name="firstname", placeholder="Enter your first name", required="required")
          input.form-control(type="text", name="lastname", placeholder="Enter your last name", required="required")
          input.form-control(type="text", name="email", placeholder="Enter your email", required="required")
          input.form-control(type="password", name="password", placeholder="Enter your password", required="required")
          input.form-control(type="password", name="password2", placeholder="Confirm your password", required="required")
          
          button.btn.btn-success(type="submit") Register
            
  